<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Health Connect to Sheets"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Activity Category -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/checkCategoryActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activity"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutActivitySubtypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/checkActiveCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active calories burned" />

                    <CheckBox
                        android:id="@+id/checkDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance" />

                    <CheckBox
                        android:id="@+id/checkElevationGained"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Elevation gained" />

                    <CheckBox
                        android:id="@+id/checkExercise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exercise sessions" />

                    <CheckBox
                        android:id="@+id/checkFloorsClimbed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Floors climbed" />

                    <CheckBox
                        android:id="@+id/checkPower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Power" />

                    <CheckBox
                        android:id="@+id/checkSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Speed" />

                    <CheckBox
                        android:id="@+id/checkSteps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steps" />

                    <CheckBox
                        android:id="@+id/checkTotalCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total calories burned" />

                    <CheckBox
                        android:id="@+id/checkVO2Max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VO2 max" />

                    <CheckBox
                        android:id="@+id/checkWheelchairPushes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wheelchair pushes" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Body Measurements Category -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/checkCategoryBodyMeasurements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body Measurements"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutBodyMeasurementsSubtypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/checkBodyFat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body fat" />

                    <CheckBox
                        android:id="@+id/checkBoneMass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bone mass" />

                    <CheckBox
                        android:id="@+id/checkHeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Height" />

                    <CheckBox
                        android:id="@+id/checkLeanBodyMass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lean body mass" />

                    <CheckBox
                        android:id="@+id/checkWeight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Cycle Tracking Category -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/checkCategoryCycleTracking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cycle Tracking"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutCycleTrackingSubtypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/checkCervicalMucus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cervical mucus" />

                    <CheckBox
                        android:id="@+id/checkMenstruation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menstruation" />

                    <CheckBox
                        android:id="@+id/checkOvulationTest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ovulation test" />

                    <CheckBox
                        android:id="@+id/checkSexualActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sexual activity" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Nutrition Category -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/checkCategoryNutrition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutrition"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutNutritionSubtypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/checkHydration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hydration" />

                    <CheckBox
                        android:id="@+id/checkNutrition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nutrition" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sleep Category -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/checkCategorySleep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutSleepSubtypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:visibility="gone">

                    <CheckBox
                        android:id="@+id/checkSleepSession"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleep sessions" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Vitals Category -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <CheckBox
                    android:id="@+id/checkCategoryVitals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vitals"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutVitalsSubtypes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:visibility="gone">

                    <!-- Foreground-only items (*) -->
                    <CheckBox
                        android:id="@+id/checkBloodGlucose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood glucose *" />

                    <CheckBox
                        android:id="@+id/checkBloodPressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blood pressure *" />

                    <CheckBox
                        android:id="@+id/checkBodyTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body temperature *" />

                    <!-- High-volume + foreground-only (*) -->
                    <CheckBox
                        android:id="@+id/checkHeartRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart rate (min/max/avg) *" />

                    <CheckBox
                        android:id="@+id/checkHeartRateVariability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart rate variability (min/max/avg) *" />

                    <CheckBox
                        android:id="@+id/checkOxygenSaturation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oxygen saturation (min/max/avg) *" />

                    <CheckBox
                        android:id="@+id/checkRespiratoryRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Respiratory rate (min/max/avg) *" />

                    <CheckBox
                        android:id="@+id/checkRestingHeartRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resting heart rate (min/max/avg)" />

                    <TextView
                        android:id="@+id/txtHighVolumeLegend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="* High-volume or foreground-only data. May take much longer (especially All time). Auto Export does not export these itemsâ€”manual export only, keep the screen on."
                        android:textColor="#D32F2F"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Date Range and Settings -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Date Range"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerDateRange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/date_ranges" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchSaferExport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Safer export mode (slower)" />

                <TextView
                    android:id="@+id/txtSaferExportHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Reduces rate-limit errors by exporting more slowly."
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtCsvSplitLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    android:text="CSV split (for All time)"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinnerCsvSplit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/csv_split_options" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Auto Export Schedule -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Auto Export Schedule"
                    android:textStyle="bold" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchAutoExport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Enable Auto Export" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:text="Export Frequency"
                    android:textSize="12sp" />

                <Spinner
                    android:id="@+id/spinnerFrequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:entries="@array/export_frequencies" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Daily Manual Export -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtDailyManualExportTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Manual Export"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchManualExportReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable daily export" />

                <!-- Everything below is visibility-controlled by the switch -->
                <LinearLayout
                    android:id="@+id/layoutManualExportControls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/txtReminderTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time: Not set"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:id="@+id/btnPickReminderTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pick reminder time"
                        android:layout_marginTop="8dp" />

                    <Button
                        android:id="@+id/btnExportAll3Days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Export ALL data to Google Sheets"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/txtExportAllHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exports all items (including *) for the last 3 days. Keep the screen on."
                        android:textSize="12sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Sheet ID -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Google Sheet ID">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editSheetId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnConnectGoogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Connect Google Account" />

        <Button
            android:id="@+id/btnExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:enabled="false"
            android:text="Export to Google Sheets" />

        <Button
            android:id="@+id/btnExportCsv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Export CSV to Downloads" />

        <Button
            android:id="@+id/btnCsvGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Bulk import to Sheets (Guide)" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Status: Ready"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtLastExport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Last manual export: Never&#10;Last auto export: Never"
            android:textAlignment="center"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtDeveloperInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Developer: Quentin Yougoubare&#10;teqxnology@gmail.com"
            android:textAlignment="center"
            android:textSize="12sp" />

    </LinearLayout>
</ScrollView>